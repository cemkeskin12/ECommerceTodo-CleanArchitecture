                                                <label style="display:block;margin-bottom:30px;" asp-for="Photos">Resim Seçiniz:</label>
                                                <input accept="image/*" type="file" multiple asp-for="Photos" />

                                            </div>
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-primary btn-block mt-4">Kaydet</button>
                                            </div>
                                        </div>
                                    </div>
