    <script>
        function readURL(input) {
            for (let i = 0; i < input.files.length; i++) {
                let fileName = input.files[i].name;
                let mimeType = input.files[i].type;
                let fileString;
                let reader = new FileReader();
                reader.readAsDataURL(input.files[i])
                reader.onload = function (e) {
                    fileString = e.target.result.split(',')[1]
                    advertFileArray.push({ "DocumentBody": fileString, "FileName": fileName, "MimeType": mimeType });

                    var pattern = `
                                    <li class="item sortable" style='float:left;'>
                                        <div class="front">
                                            <img src="${e.target.result}" orderNumber="0" default="false" class="img-preview">
                                        </div>
                                        <div class="back">
                                            <a href="javascript:;" class="deleteItem">
                                                <i class="far fa-trash-alt"></i>
                                            </a>
                                        </div>
                                        <div class="clearfix"></div>
                                    </li>`;

                    $(document).find("ul.uploadList").append(pattern);
                }
            }
        }
    </script>

