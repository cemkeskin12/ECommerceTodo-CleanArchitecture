@using ECommerce.Application.Features.Products.Commands.CreateProduct
@model CreateProductCommandRequest
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Ürün Yönetimi /</span> Ürün Ekle</h4>
        <div class="col-lg-12 mb-4 order-0">
            <div class="card">
                <div class="d-flex align-items-end row">
                    <div class="col-sm-12">
                        <div class="card-body">
                            <form asp-controller="Product" asp-action="Add" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly"></div>
                                <div class="row mt-2">
                                    <div class="col-md-12">
                                        <div class="card-body">
                                            <div class="form-group mb-5">

                                                <label for="brandList" asp-for="BrandId">Kategori</label>
                                                <select id="brandList" class="form-control" asp-for="BrandId" asp-items="@(new SelectList(Model.Brands,"Id","Name"))">
                                                </select>
                                                <span asp-validation-for="BrandId" class="text-danger"></span>

                                            </div>
                                            <div class="form-group mb-5">
                                                <label for="productName" asp-for="Name">Ürün adı:</label>
                                                <input type="text" id="productName" class="form-control" placeholder="Ürün adını giriniz." asp-for="Name" />
                                                <span asp-validation-for="Name" class="text-danger "></span>
                                            </div>
                                            <div class="form-group mb-5">
                                                <label for="productPrice" asp-for="Price">Ürün Fiyatı</label>
                                                <input type="text" id="productPrice" class="form-control" placeholder="Ürün fiyatını giriniz." asp-for="Price" />
                                                <span asp-validation-for="Price" class="text-danger"></span>
                                            </div>

