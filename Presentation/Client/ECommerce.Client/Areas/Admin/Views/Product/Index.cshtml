@model IList<GetAllProductsQueryResponse>
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Ürün Yönetimi /</span> Ürünler</h4>
        <div class="col-lg-12 mb-4 order-0">
            <div class="card">
                <div class="d-flex align-items-end row">
                    <div class="col-sm-12">
                        <div class="card-body">
                            <div class="table-responsive">
                                <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Product" asp-action="Add">
                                    Ürün Ekle <i class='bx bx-plus'></i>
                                </a>

                                <table class="table table-bordered" id="productsTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>İsim</th>
                                            <th>Fiyat</th>
                                            <th>Marka</th>
                                            <th>Kategori</th>
                                            @*<th>Durum</th>*@
                                            <th>İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>İsim</th>
                                            <th>Fiyat</th>
                                            <th>Marka</th>
                                            <th>Kategori</th>
                                            @*<th>Durum</th>*@
                                            <th>İşlemler</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var products in Model)
                                        {
                                            <tr name="@products.Id">
                                                <td>@products.Name</td>
                                                <td>@products.Price</td>
                                                <td>@products.Brand.Name</td>
                                                <td>@products.Subcategory.Name</td>
                                                @*<td>@(products.IsActive ? "Aktif" : "Aktif Değil")</td>*@
                                                <td style="min-width : 140px">
                                                    <a class="btn btn-primary btn-sm btn-update" data-id="@products.Id" asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-articleId="@products.Id"><i class='bx bxs-edit'></i></a>
                                                    <a class="btn btn-danger btn-sm btn-delete" data-id="@products.Id" asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-articleId="@products.Id"><i class='bx bx-minus-circle'></i></a>
                                                    <a class="btn btn-info btn-sm btn-detail" data-id="@products.Id" asp-area="Admin" asp-controller="Product" asp-action="Detail" asp-route-articleId="@products.Id"><i class='bx bx-detail'></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="~/js/productIndex.js" type="application/ecmascript"></script>
}